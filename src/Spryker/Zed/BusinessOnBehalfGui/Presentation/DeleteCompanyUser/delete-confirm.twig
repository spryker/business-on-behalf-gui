{% extends '@Gui/Layout/layout.twig' %}

{% set widget_title = 'Company user deletion confirmation'| trans %}

{% block head_title widget_title %}
{% block section_title widget_title %}

{% block action %}
    {{ backActionButton(app.request.headers.get('referer'), 'Back' | trans) }}
{% endblock %}

{% block content %}

    {% embed '@Gui/Partials/widget.twig' %}

        {% block widget_content %}
            <p>{{ 'You are trying to delete user' | trans }}: <b>"{{ companyUser.customer.firstName ~ ' ' ~ companyUser.customer.lastName }}"</b>
                {{ 'for company' | trans }} <b>"{{ companyUser.company.name }}"</b>,
                {{ 'business unit' |trans }} <b>"{{ companyUser.companyBusinessUnit.name }}"</b>
            </p>
            <p>{{ 'The Company User and all related data will be deleted permanently.' | trans }}</p>
            <div>
                <a href="{{ app.request.headers.get('referer') }}" class="btn btn-back">{{ 'Cancel' | trans }}</a>
                {{ form_start(deleteForm, {
                    'action': url(
                        '/business-on-behalf-gui/delete-company-user/delete',
                        {'id-company-user': companyUser.idCompanyUser}
                    )
                }) }}
                <input type="submit" value="{{ 'Delete company user' | trans}}" class="btn btn-danger safe-submit">
                {{ form_end(deleteForm) }}
            </div>
        {% endblock %}

    {% endembed %}

{% endblock %}
